{{!
    @template profilefield_learningstyles/results

    Example context (json):
    {
        "attributes": [
            {
                "helpstyles": [
                    {
                        "active": {
                            "text": "Active style explanation",
                            "alt": "Active"
                        }
                    },
                    {
                        "reflective": {
                            "text": "Reflective style explanation",
                            "alt": "Reflective"
                        }
                    },
                    {
                        "sequential": {
                            "text": "Sequential style explanation",
                            "alt": "Sequential"
                        }
                    },
                    {
                        "global": {
                            "text": "Global style explanation",
                            "alt": "Global"
                        }
                    },
                    {
                        "sensing": {
                            "text": "Sensing style explanation",
                            "alt": "Sensing"
                        }
                    },
                    {
                        "intuitive": {
                            "text": "Intuitive style explanation",
                            "alt": "Intuitive"
                        }
                    },
                    {
                        "visual": {
                            "text": "Visual style explanation",
                            "alt": "Visual"
                        }
                    },
                    {
                        "verbal": {
                            "text": "Verbal style explanation",
                            "alt": "Verbal"
                        }
                    }
                ],
                "processing": 20,
                "understanding": 40,
                "perception": 60,
                "input": 80
            }
        ]
    }
}}

<div class="profilefield_learningstyles-results">
    <div>
        <div class="onestyle" data-style="processing">
            <label>
                {{#helpstyles}}{{#active}}{{>core/help_icon}}{{/active}}{{/helpstyles}}
                {{#str}} style_active, profilefield_learningstyles {{/str}}
            </label>
            <div class="bar">
                <div {{#processing}}style="left: calc({{.}}% - 100% / 12);"{{/processing}}></div>
            </div>
            <label>
                {{#str}} style_reflective, profilefield_learningstyles {{/str}}
                {{#helpstyles}}{{#reflective}}{{>core/help_icon}}{{/reflective}}{{/helpstyles}}
            </label>
        </div>
        <div class="onestyle" data-style="understanding">
            <label>
                {{#helpstyles}}{{#sequential}}{{>core/help_icon}}{{/sequential}}{{/helpstyles}}
                {{#str}} style_sequential, profilefield_learningstyles {{/str}}
            </label>
            <div class="bar">
                <div {{#understanding}}style="left: calc({{.}}% - 100% / 12);"{{/understanding}}></div>
            </div>
            <label>
                {{#str}} style_global, profilefield_learningstyles {{/str}}
                {{#helpstyles}}{{#global}}{{>core/help_icon}}{{/global}}{{/helpstyles}}
            </label>
        </div>
        <div class="onestyle" data-style="perception">
            <label>
                {{#helpstyles}}{{#sensing}}{{>core/help_icon}}{{/sensing}}{{/helpstyles}}
                {{#str}} style_sensing, profilefield_learningstyles {{/str}}
            </label>
            <div class="bar">
                <div {{#perception}}style="left: calc({{.}}% - 100% / 12);"{{/perception}}></div>
            </div>
            <label>
                {{#str}} style_intuitive, profilefield_learningstyles {{/str}}
                {{#helpstyles}}{{#intuitive}}{{>core/help_icon}}{{/intuitive}}{{/helpstyles}}
            </label>
        </div>
        <div class="onestyle" data-style="input">
            <label>
                {{#helpstyles}}{{#visual}}{{>core/help_icon}}{{/visual}}{{/helpstyles}}
                {{#str}} style_visual, profilefield_learningstyles {{/str}}
            </label>
            <div class="bar">
                <div {{#input}}style="left: calc({{.}}% - 100% / 12);"{{/input}}></div>
            </div>
            <label>
                {{#str}} style_verbal, profilefield_learningstyles {{/str}}
                {{#helpstyles}}{{#verbal}}{{>core/help_icon}}{{/verbal}}{{/helpstyles}}
            </label>
        </div>
    </div>
</div>